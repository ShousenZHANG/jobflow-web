// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum JobStatus {
  NEW
  APPLIED
  REJECTED
}

enum FetchRunStatus {
  QUEUED
  RUNNING
  SUCCEEDED
  FAILED
}

enum AiProvider {
  OPENAI
  GEMINI
  CLAUDE
}

model User {
  id            String    @id @default(uuid()) @db.Uuid
  email         String?   @unique
  name          String?
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]

  jobs             Job[]
  savedSearches    SavedSearch[]
  fetchRuns        FetchRun[]
  deletedJobUrls   DeletedJobUrl[]
  dailyCheckins    DailyCheckin[]
  resumeProfiles   ResumeProfile[]
  aiPromptProfile  AiPromptProfile?
  aiProviderConfig UserAiProviderConfig?
  applications     Application[]
}

model Account {
  id     String @id @default(uuid()) @db.Uuid
  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  type              String
  provider          String
  providerAccountId String

  refresh_token String?
  access_token  String?
  expires_at    Int?
  token_type    String?
  scope         String?
  id_token      String?
  session_state String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(uuid()) @db.Uuid
  sessionToken String   @unique
  userId       String   @db.Uuid
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expires      DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Job {
  id     String @id @default(uuid()) @db.Uuid
  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  jobUrl      String
  title       String
  company     String?
  location    String?
  jobType     String?
  jobLevel    String?
  description String?
  status      JobStatus @default(NEW)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  applications Application[]

  @@unique([userId, jobUrl])
  @@index([userId, createdAt])
  @@index([userId, updatedAt])
  @@index([userId, status])
}

model DeletedJobUrl {
  id     String @id @default(uuid()) @db.Uuid
  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  jobUrl    String
  deletedAt DateTime @default(now())

  @@unique([userId, jobUrl])
  @@index([userId, deletedAt])
}

model DailyCheckin {
  id     String @id @default(uuid()) @db.Uuid
  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  localDate String
  checkedAt DateTime @default(now())

  @@unique([userId, localDate])
  @@index([userId, localDate])
}

model SavedSearch {
  id     String @id @default(uuid()) @db.Uuid
  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  name      String
  query     String
  location  String?
  hoursOld  Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, createdAt])
}

model FetchRun {
  id     String @id @default(uuid()) @db.Uuid
  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Snapshot for convenience (used by GitHub Actions to import to the correct user)
  userEmail String

  status        FetchRunStatus @default(QUEUED)
  error         String?
  importedCount Int            @default(0)

  // Fetch parameters (JSON so we can evolve without migrations)
  queries            Json
  location           String?
  hoursOld           Int?
  resultsWanted      Int?
  includeFromQueries Boolean @default(false)
  filterDescription  Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, createdAt])
  @@index([userId, status])
}

model ResumeProfile {
  id     String @id @default(uuid()) @db.Uuid
  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  summary     String?
  basics      Json?
  links       Json?
  skills      Json?
  experiences Json?
  projects    Json?
  education   Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  applications Application[]

  @@index([userId, updatedAt])
}

model AiPromptProfile {
  id     String @id @default(uuid()) @db.Uuid
  userId String @unique @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  cvRules    Json
  coverRules Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserAiProviderConfig {
  id     String @id @default(uuid()) @db.Uuid
  userId String @unique @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  provider AiProvider
  model    String?

  apiKeyCiphertext String
  apiKeyIv         String
  apiKeyTag        String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Application {
  id     String @id @default(uuid()) @db.Uuid
  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  jobId String? @db.Uuid
  job   Job?    @relation(fields: [jobId], references: [id], onDelete: SetNull)

  resumeProfileId String?        @db.Uuid
  resumeProfile   ResumeProfile? @relation(fields: [resumeProfileId], references: [id], onDelete: SetNull)

  company String?
  role    String?

  resumeTexUrl  String?
  resumePdfUrl  String?
  resumePdfName String?
  coverTexUrl   String?
  coverPdfUrl   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, jobId])
  @@index([userId, createdAt])
}
